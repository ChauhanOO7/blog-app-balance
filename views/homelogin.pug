doctype 
html 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title  Blog
        style 
            include ../static/home.css
    body 
        div.container
            nav.navbar
                img(src="../static/images/blog.png",width=100,height=100)
                h1  Blogosphere Bliss
                ul.ullist
                    li: a(href="/") Home 
                    li: a(href="/about") About 
                a(href="/addblog"): button  ADD BLOG
                button(id="logout")  LOGOUT

            div.content
                h1 Blogs
                ul.bloglist 
                    for n in allblogs 
                        li
                            div.blog
                                img(src=`${n.blogimage.url}`,width=200,height=200)
                                div
                                    h2=n.title
                                    button(id=`${n._id}`,class="forpost") View 

        script 
            include ../static/logout.js
